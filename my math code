#include <stdio.h>

int main() {
    double num1, num2;

    printf("number1: ");
    scanf("%lf", &num1);

    printf("number2: ");
    scanf("%lf", &num2);

    printf("Addition: %.2lf\n", num1 + num2);
    printf("Subtraction: %.2lf\n", num1 - num2);
    printf("Multiplication: %.2lf\n", num1 * num2);

    if (num2 != 0) {
        printf("Division: %.2lf\n", num1 / num2);
    }
    else {
        printf("cannot be divided by 0\n");
    }

    return 0;
}
